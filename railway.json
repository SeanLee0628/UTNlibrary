{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "python3 -m pip install -r backend/requirements.txt && python3 -m prisma generate --schema=backend/schema.prisma"
    },
    "deploy": {
        "startCommand": "python3 backend/main.py",
        "restartPolicyType": "ON_FAILURE",
        "healthCheckPath": "/",
        "runtimeConfig": {
            "PYTHON_VERSION": "3.11"
        }
    }
}